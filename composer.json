{
	"name": "bluespice/wikiexplorer",
	"type": "mediawiki-extension",
	"description": "Sort articles by criteria",
	"license": "GPL-3.0-only",
	"require": {
		"composer/installers": "~1.0"
	},
	"autoload": {
		"psr-4": {
			"BlueSpice\\WikiExplorer\\": "src"
		}
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "19.1.0",
		"mediawiki/minus-x": "0.3.1",
		"php-parallel-lint/php-console-highlighter": "0.3.2",
		"php-parallel-lint/php-parallel-lint": "1.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"extra": {
		"installer-name": "BlueSpiceWikiExplorer"
	}
}
